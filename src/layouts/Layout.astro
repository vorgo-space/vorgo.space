---
import '../style/main.css';
import logo from '../assets/images/logo-inline.svg';
import logoPc from '../assets/images/logo-pc.svg';
import ActionButton from '../components/ActionButton.astro';
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <title>{title}</title>
  </head>
  <body class="h-full bg-[#010D1A] text-white">
    <div class="container mx-auto max-w-7xl">
      <header>
        <div class="flex justify-between mx-auto max-w-7xl sm:py-12 pb-4 pt-12 px-8 xl:px-0">
          <img src={logo.src} alt="vorgo-space-logo" class="hidden md:block" />
          <img src={logoPc.src} alt="vorgo-space-logo" class="md:hidden w-20" />
          <ActionButton />
        </div>
      </header>
      <slot />
      <footer class="pt-10 pb-16 sm:pb-12 sm:pt-16 px-6 text-white/60">
        <div class="flex flex-col lg:flex-row justify-between">
          <div class="text-center lg:text-left lg:w-1/2">
            <img class="mx-auto lg:ml-0 lg:mr-4 h-5" src={logo.src} alt="vorgo-space-logo" />
            <p class="pt-4 lg:pt-20 pb-4 lg:pb-24">
              Designed by
              <span>
                <a
                  href="https://www.linkedin.com/in/and%C5%BEela-kate-p%C5%ABli%C5%86a/"
                  class="underline underline-offset-auto"
                >
                  Andžela Kate Pūliņa
                </a>
              </span>
            </p>
          </div>
          <div class="text-center lg:text-right lg:w-1/2">Copyright © 2023</div>
        </div>
      </footer>
    </div>
  </body>
</html>
